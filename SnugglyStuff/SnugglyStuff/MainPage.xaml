             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:Views ="clr-namespace:SnugglyStuff.Views"
             mc:Ignorable="d"
             x:Class="SnugglyStuff.MainPage">

    <ShellContent Title="Home" 
